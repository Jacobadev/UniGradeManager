{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Source",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-c",
                "view.c",
                "model.c",
                "&&",
                "gcc",
                "view.o",
                "model.o",
                "-o",
                "executable",
                "&&",
                "./executable"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Link Objects",
            "type": "shell",
            "command": "",
            "args": [
                "view.o",
                "model.o",
                "-o",
                "Database"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}